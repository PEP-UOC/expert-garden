{
	"cli": {
		"version": ">= 0.52.0",
		"requireCommit": true
	},
	"build": {
		"androidAPK": {
			"developmentClient": true,
			"distribution": "internal",
			"android": {
				"buildType": "apk"
			},
			"env": {
				"APP_VARIANT": "androidAPK"
			}
		},
		"iosSimulator": {
			"developmentClient": true,
			"distribution": "internal",
			"ios": {
				"simulator": true
			},
			"env": {
				"APP_VARIANT": "iosSimulator"
			}
		},
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"env": {
				"APP_VARIANT": "development"
			}
		},
		"preview": {
			"distribution": "internal",
			"env": {
				"APP_VARIANT": "preview"
			}
		},
		"production": {
			"env": {
				"APP_VARIANT": "expertgarden"
			}
		}
	},
	"submit": {
		"production": {}
	}
}
